
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  firstName String
  lastName  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

    appointments Appointment[] 

  @@map("users")
}

model Appointment {
  id          String   @id @default(cuid())
  counselor   String
  type        String
  date        DateTime
  time        String
  reason      String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt


  userId String
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("appointments")
}